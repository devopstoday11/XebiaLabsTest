<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <RelativeLayout
        android:id="@+id/rl_tool_bar"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d_10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_menu"
            android:layout_width="@dimen/d_40dp"
            android:layout_height="@dimen/d_40dp"
            android:layout_centerVertical="true"
            android:padding="@dimen/d_5dp"
            android:tint="@android:color/white"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_menu_black" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/d_5dp"
            android:layout_marginLeft="@dimen/d_5dp"
            android:layout_toEndOf="@+id/iv_menu"
            android:layout_toRightOf="@+id/iv_menu"
            android:gravity="start"
            android:text="@string/s_home_tittle"
            android:textAllCaps="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/iv_search"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/white"
            android:textSize="@dimen/d_17sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/d_5dp"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_more_vert_black" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_more"
            android:layout_toLeftOf="@+id/iv_more"
            android:padding="@dimen/d_5dp"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_search_black" />
    </RelativeLayout>
</layout>



